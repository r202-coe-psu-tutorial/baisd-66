<Container>:
    orientation: 'vertical' 
    Label:
        text: "Simple App"
        font_size: "50sp"

    TextInput:
        id: name
        font_size: "30sp"

    BoxLayout:
        Button:
            text: "Submit"
            font_size: "30sp"
            on_press: root.display_name(name.text)
        Button:
            text: "Reset"
            font_size: "30sp"
            on_press: display_label.text = "Enter Your Name"

    Label:
        id: display_label
        text: "Enter Your Name"
        font_size: "30sp"


